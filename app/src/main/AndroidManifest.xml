        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MindBodyEarthMK3"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login Activity -->
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="true" /> <!-- Register Activity -->
        <activity
            android:name=".ui.ResetPasswordActivity"
            android:exported="true" /> <!-- Reset Password Activity -->
        <activity
            android:name=".ui.HomePageActivity"
            android:exported="true" /> <!-- Home Page Activity -->
        <activity
            android:name=".ui.JournalActivity"
            android:exported="true" /> <!-- Journal Activity -->
        <activity
            android:name=".ui.MealPlanActivity"
            android:exported="true" /> <!-- Meal Plan Activity -->
        <activity
            android:name=".ui.HealthTrackingActivity"
            android:exported="true" /> <!-- Health Tracking Activity -->
        <activity
            android:name=".ui.WorkoutPlanActivity"
            android:exported="true" /> <!-- Workout Plan Activity -->
        <activity
            android:name=".ui.TipsChatActivity"
            android:exported="false" /> <!-- Tips Chat Activity -->
    </application>

</manifest>
